<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="Brave Random World" file="BraveRandomWorld" main="Main" version="0.12" company="Errant Works" />
	
	<app preloader="flixel.system.FlxPreloader" />
	
	<set name="SWF_VERSION" value="11.8" />
	
	<window width="800" height="600" fps="60" background="#191919" hardware="true" vsync="true" />
	<window if="web" orientation="landscape"  />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="false" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<set name="BUILD_DIR" value="export" />

	<classpath name="source" />

	<assets path="assets" />

	<haxelib name="flixel"/>
	<haxelib name="flixel-ui" />
	
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
</project>
